@model IEnumerable<Appellio.Models.IWord>

@{
    ViewData["Title"] = "Words";
}

<h3>@ViewData["AlbumTitle"]</h3>
<p>
    <a asp-action="Create" asp-controller="Words" asp-route-albumId="@TempData["AlbumId"]">
        単語の作成
    </a>
</p>

<button id="start" class="btn btn-primary">再生</button>
<button id="pause" class="btn btn-secondary">停止</button>

<table id="wordsTable" class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Spelling)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Meaning)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Text)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Spelling)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Meaning)
                </td>
                <td class=".cell-text">
                    @Html.DisplayFor(modelItem => item.Text)
                </td>
                <td>
                    @Html.ActionLink("詳細", "Details", "Words", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Index" asp-controller="Albums" >アルバムリストに戻る</a>
</div>

<script src="~/js/app.js"></script>